	<script>
        var dynamicCode = '${bubbleScripts}';
        if (dynamicCode) {
            var scriptElement = document.createElement('script');
            scriptElement.type = 'text/javascript';
            scriptElement.textContent = dynamicCode;
            document.head.appendChild(scriptElement);
            console.log("Dynamic JavaScript code has been added and executed.");
        } else {
            console.warn("No dynamic JavaScript code to add.");
        }
