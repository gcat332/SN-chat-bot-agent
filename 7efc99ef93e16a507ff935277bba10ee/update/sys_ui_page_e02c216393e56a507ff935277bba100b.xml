    <script>
        var userId = "${gs.getUserID()}";
		var sessionId = "${gs.getSession().getSessionID()}";

		document.getElementById('msgInput').addEventListener('keydown', function(event) {
		if (event.key === 'Enter') {
				event.preventDefault(); // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏Ç‡∏∂‡πâ‡∏ô‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡πÉ‡∏´‡∏°‡πà
